{
  "$id": "http://xdm.sensei.adobe.io/schemas/content/v1/content_transformation",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "feature_simple": {
      "type": "object",
      "required": [
        "feature_name",
        "feature_value"
      ],
      "properties": {
        "feature_name": {
          "type": "string",
          "title": "The Feature_name Schema ",
          "default": ""
        },
        "feature_value": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "integer"
            },
            {
              "type": "string"
            },
            {
              "type": "boolean"
            },
            {
              "type": "object"
            }
          ]
        }
      }
    },
    "feature_array": {
      "type": "object",
      "required": [
        "feature_name",
        "feature_value"
      ],
      "properties": {
        "feature_name": {
          "type": "string"
        },
        "feature_value": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": [
                  "string",
                  "number",
                  "integer",
                  "boolean",
                  "object"
                ]
              },
              {
                "$ref": "#/definitions/feature_simple"
              },
              {
                "$ref": "#/definitions/feature_array"
              }
            ]
          }
        }
      }
    },
    "feature_core": {
      "anyOf": [
        {
          "$ref": "#/definitions/feature_simple"
        },
        {
          "$ref": "#/definitions/feature_array"
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "features": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/feature_core"
      }
    }
  },
  "required": [
    "features"
  ]
}
